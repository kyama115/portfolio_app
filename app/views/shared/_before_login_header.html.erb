<header class="bg-black fixed top-0 left-0 w-full z-10">
  <div class="flex items-center justify-between h-16">
    <div class="flex ml-2 items-center">
      <%= image_tag("sample.png", alt: "ロゴ", class: "h-10") %>
      <a href="/" class="text-white text-2xl ml-4">シーシャ検索サイト</a>
    </div>
    <!-- ransack検索フォーム -->
    <div class="flex-grow">
      <% if @q %>
        <%= search_form_for @q, url: shops_path, local: true, class: 'd-flex mx-auto my-2 my-lg-0 position-relative' do |f| %>
          <div data-controller="autocomplete" data-autocomplete-url-value="/shops/autocomplete" role="combobox">
            <div class="input-group">
              <%= f.search_field :title_or_description_or_area_or_budget_or_scene_cont, data: { autocomplete_target: 'input' }, placeholder: "店舗名で検索", class: "ml-4 w-100 h-10 px-4 bg-white text-black rounded-full" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <!-- Tailwind CSSを使用したハンバーガーメニューアイコンの追加 -->
    <div class="flex ml-auto">
      <nav>
        <ul class="flex space-x-4 text-white">
          <li><%= link_to 'ホーム', root_path %></li>
          <li><%= link_to '店舗一覧', shops_path%></li>
          <li><%= link_to '新規登録', new_user_registration_path %></li>
          <li><%= link_to 'ログイン', new_user_session_path %></li>
        </ul>
      </nav>

      <button id="menu-toggle" class="text-white ml-4 mr-4 focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </div>
  <!-- ドロワーメニューの追加 -->
  <div id="drawer-menu" class="hidden absolute right-0 top-0 bg-black w-48 h-full">
    <a href="/" class="text-white block p-4">マイページ</a>
    <a href="/" class="text-white block p-4">ログアウト</a>
  </div>
</header>
