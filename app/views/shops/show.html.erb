<div class="container mx-auto bg-gray-100 p-8">
  <div class="relative flex justify-center items-center">
    <%= image_tag("shisha.jpg", class: "w-960 h-480 object-cover") %>
    <div class="absolute inset-0 bg-opacity-50 flex flex-col justify-center items-center text-white">
    </div>
  </div>

  <div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= @shop.title %></h1>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
              <% if @shop.shop_image.present? %>
                <%= image_tag @shop.shop_image, class: "card-img-top img-fluid", width: "300", height: "200" %>
              <% end %>
            </div>
            <div class='col-md-9'>
              <h3 style='display: inline;'><%= @shop.title %></h3>
              <ul class="list-inline">
              </ul>
              <div class='d-flex justify-content-end'>
                <%= link_to "#", id: "button-edit-#{@shop.id}" do %>
                  <i class='bi bi-pencil-fill'></i>
                <% end %>
                <%= link_to "#", class: "ms-2", id: "button-delete-#{@shop.id}" do %>
                  <i class="bi bi-trash-fill"></i>
                <% end %>
              </div>
            </div>
          </div>
          <p><%= simple_format(@shop.description) %></p>
        </div>
      </article>
    </div>
  </div>
</div>

  <%# <!-- コメントフォーム -->
  <%= render "comments/form", comment: @comment, shop: @shop %>

   <!-- コメントエリア -->
