<%= form_with model: @shop, local: true do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', rows: 10 %>
    </div>
    <div class="form-group">
      <%= f.label :shop_image %>
      <%= f.file_field :shop_image, class: 'form-control mb-3', accept: 'image/*' %>
      <%= f.hidden_field :shop_image_cache %>
    </div>
    <div class='mt-3 mb-3'>
      <%= image_tag @shop.shop_image.url, id: 'preview', size: '300x200' %>
    </div>

     <%= f.submit class: 'btn btn-primary' %>
  <% end %>