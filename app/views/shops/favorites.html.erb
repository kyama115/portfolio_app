<!-- お気に入り一覧 -->
<section class="bg-gray-200 text-gray-600 px-36">
  <div class="container px-4 py-12 mx-auto">
    <div class="flex flex-col text-center w-full mb-20 tracking-wider">
      <% breadcrumb :favorites %>
      <h1 class="text-5xl mb-4 text-gray-900">Favorites List</h1>
      <p class="lg:w-2/3 mx-auto leading-relaxed text-base">お気に入り一覧</p>
    </div>
    <div class="flex flex-wrap -m-4">
      <% if @favorite_shops.present? %>
        <% @favorite_shops.each do |shop| %>
                <div class="w-1/3 p-4">
            <div class="flex relative h-full">
              <%= image_tag(shop_image(shop), class: "absolute inset-0 w-full h-full object-cover object-center rounded-lg") %>
              <div class="absolute top-3 right-3 z-20">
                <%= render 'favorites/favorite_buttons', { shop: shop } %>
              </div>
              <%= link_to shop_path(shop), class: "px-8 py-10 relative w-full border-4 border-gray-200 bg-white opacity-0 hover:opacity-100 transition-opacity duration-300 rounded-lg" do %>
                <div class="tracking-widest text-sm title-font font-medium text-blue-600 mb-1" style="min-height: 60px;">
                  <%= shop.area.presence || "" %>
                </div>
                <h1 class="title-font text-lg font-medium text-gray-900 mb-3"><%= shop.title %></h1>
                <p class="leading-relaxed text-gray-800"><%= shop.description %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="w-full text-center">
          <p><%= t('shops.no_result') %></p>
        </div>
      <% end %>
    </div>
    <%= paginate @favorite_shops %>
    <%= link_to "戻る", :back, class: "mt-12 tracking-widest flex flex-col w-full text-center text-black hover:underline" %>
  </div>
</section>