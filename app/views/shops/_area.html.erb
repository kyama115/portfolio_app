      '世田谷区' => '世田谷',
      '目黒区' => '目黒',
      '港区' => '港',
      '中央区' => '中央',
      '千代田区' => '千代田',
      '台東区' => '台東',
      '文京区' => '文京',
      '豊島区' => '豊島',
      '北区' => '北',
      '荒川区' => '荒川',
      '板橋区' => '板橋',
      '練馬区' => '練馬',
