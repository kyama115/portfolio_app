<!-- 掲示板一覧 -->
<% content_for :title do %>
  店舗一覧
<% end %>

<section class="bg-gray-100 text-gray-600 px-36">
  <div class="container px-4 py-12 mx-auto">
    <div class="flex flex-col text-center w-full mb-20 tracking-wider">
      <h1 class="text-5xl mb-4 text-gray-900">Store List</h1>
      <p class="lg:w-2/3 mx-auto leading-relaxed text-base">店舗一覧</p>
    </div>
    <div class="flex flex-wrap -m-4">
      <% if @shops.present? %>
        <% @shops.each do |shop| %>
          <div class="w-1/3 p-4">
            <div class="flex relative">
              <%= image_tag("shisha.jpg", class: "absolute inset-0 w-full h-full object-cover object-center rounded-xl") %>
              <div class="px-8 py-10 relative z-10 w-full border-4 border-gray-200 bg-white opacity-0 hover:opacity-100 rounded-xl">
                <h2 class="tracking-widest text-sm title-font font-medium text-indigo-500 mb-1"><%= shop.area %></h2>
                <h1 class="text-lg text-gray-900 mb-3"><%= link_to shop.title, shop_path(shop) %></h1>
                <p class="leading-relaxed title-font font-medium"><%= shop.description %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="w-full text-center">
          <p><%= t('shops.no_result') %></p>
        <% end %>
      </div>
    </div>
    <%# <%= paginate @shops %>
  </div>
  <div class="mb-16">
</section>