<% content_for(:title, 'ユーザー編集') %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="mx-auto max-w-3xl">
    <%= form_with(model: @user, local: true, class: 'space-y-6') do |f| %>
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-2xl font-bold text-gray-900 sm:text-3xl">ユーザー編集</h1>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to admin_user_path(@user), class: "group flex items-center text-sm text-gray-500 hover:text-gray-900" do %>
            <svg class="mr-2 h-4 w-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            詳細に戻る
          <% end %>
        </div>
      </div>
      <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
        <div class="px-6 py-6 sm:p-8">
          <div class="grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-6">
            <!-- Email -->
            <div class="sm:col-span-4">
              <%= f.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
              <%= f.email_field :email, class: "block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
            <!-- Name -->
            <div class="sm:col-span-4 mt-4">
              <%= f.label :name, class: "block text-sm font-medium leading-6 text-gray-900" %>
              <%= f.text_field :name, class: "block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
            <!-- Role -->
            <div class="sm:col-span-4 mt-4">
              <%= f.label :role, class: "block text-sm font-medium leading-6 text-gray-900" %>
              <%= f.select :role, User.roles.invert, {}, selected: @user.role, class: "block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
            <!-- Avatar -->
            <div class="sm:col-span-4 mt-4">
              <div class="space-y-6">
              <% if @user.avatar.present? %>
                <div class="flex items-center space-x-6">
                  <div class="relative">
                    <%= image_tag(url_for(@user.avatar.variant(resize: '300x300')), class: "h-40 w-40 object-cover rounded-lg") %>
                    <div class="absolute inset-0 ring-1 ring-inset ring-black/10 rounded-lg"></div>
                  </div>
                </div>
              <% end %>

              <div class="mt-4">
                <%= f.label :avatar, class: "block text-sm font-medium leading-6 text-gray-900 mb-2" %>
                <div class="mt-2 flex justify-center rounded-lg border border-dashed border-gray-900/25 px-6 py-10">
                  <div class="text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor">
                      <path fill-rule="evenodd" d="M1.5 6a2.25 2.25 0 012.25-2.25h16.5A2.25 2.25 0 0122.5 6v12a2.25 2.25 0 01-2.25 2.25H3.75A2.25 2.25 0 011.5 18V6zM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0021 18v-1.94l-2.69-2.689a1.5 1.5 0 00-2.12 0l-.88.879.97.97a.75.75 0 11-1.06 1.06l-5.16-5.159a1.5 1.5 0 00-2.12 0L3 16.061zm10.125-7.81a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0z" clip-rule="evenodd" />
                    </svg>
                    <div class="mt-4 flex text-sm leading-6 text-gray-600">
                      <label for="file-upload" class="relative cursor-pointer rounded-md bg-white font-semibold text-indigo-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-indigo-600 focus-within:ring-offset-2 hover:text-indigo-500">
                        <%= f.file_field :avatar,
                            class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-600 hover:file:bg-indigo-100",
                            accept: "image/*" %>
                      </label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-4">
          <%= f.submit '保存する', class: "rounded-md bg-gray-800 px-8 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-gray-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600 transition-colors duration-200" %>
        </div>
      </div>
    <% end %>
  </div>
</div>