<%= search_form_for @q, url: admin_users_path do |f| %>
  <div class="row">
    <div class="d-flex align-items-center justify-content-center">
      <div class="d-inline me-3">
        <%= f.search_field :name_or_email_or_role_cont, class: 'form-control', placeholder: '名前/メールアドレス' %>
      </div>
      <div class="d-inline me-3">
        <%= f.select :role_eq, User.roles.keys.map { |role| [t("activerecord.attributes.user.roles.#{role}"), role] }, { include_blank: '指定なし' }, { class: 'form-control me-1' } %>
      </div>
      <%= f.submit "検索", class: "ml-auto mt-4 px-6 py-2 bg-black text-white rounded-lg hover:underline" %>
    </div>
  </div>
<% end %>
