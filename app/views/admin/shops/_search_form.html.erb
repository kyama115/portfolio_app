<%= search_form_for @q, url: admin_shops_path do |f| %>
  <div class="row">
    <div class="d-flex align-items-center justify-content-center">
      <div class="d-inline me-3">
        <%= f.search_field :title_or_address_or_area_or_budget_or_scene_or_opening_hours_or_shop_number_cont, class: 'form-control', placeholder: '検索ワード' %>
      </div>
      <div class="d-flex me-3">
        <%= f.date_field :created_at_gteq, class: 'form-control' %>
        <span class="mx-1">〜</span>
        <%= f.date_field :created_at_lteq_end_of_day, class: 'form-control' %>
      </div>
      <%= f.submit "検索", class: "ml-auto mt-2 px-6 py-2 bg-black text-white rounded-lg hover:underline" %>
    </div>
  </div>
<% end %>
