<% content_for(:title, '店舗編集') %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="mx-auto max-w-3xl">
    <%= form_with(model: [:admin, @shop], local: true, class: 'space-y-6') do |f| %>
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-2xl font-bold text-gray-900 sm:text-3xl">店舗編集</h1>
          <p class="mt-2 text-sm text-gray-600">店舗ID: #<%= @shop.id %></p>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to admin_shop_path(@shop), class: "group flex items-center text-sm text-gray-500 hover:text-gray-900" do %>
            <svg class="mr-2 h-4 w-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            詳細に戻る
          <% end %>
        </div>
      </div>

      <div class="space-y-6">
        <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
          <div class="px-6 py-6 sm:p-8">
            <div class="grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-6">
              <div class="sm:col-span-4">
                <%= f.label :title, class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="relative mt-2">
                  <%= f.text_field :title,
                      class: "block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "店舗名を入力" %>
                  <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none text-gray-400">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                  </div>
                </div>
              </div>

              <div class="col-span-full mt-4">
                <%= f.label :description, class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="mt-2">
                  <%= f.text_area :description,
                      rows: 4,
                      class: "block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "店舗の説明を入力" %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
          <div class="px-6 py-6 sm:p-8">
            <div class="grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-6">
              <div class="sm:col-span-3 mt-4">
                <%= f.label :area, class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="relative mt-2">
                  <%= f.text_field :area,
                      class: "block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "エリアを入力" %>
                  <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none text-gray-400">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                </div>
              </div>

              <div class="sm:col-span-3 mt-4">
                <%= f.label :budget, class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="relative mt-2">
                  <%= f.text_field :budget,
                      class: "block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "予算を入力" %>
                  <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none text-gray-400">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                </div>
              </div>

              <div class="sm:col-span-3 mt-4">
                <%= f.label :scene, class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="mt-2">
                  <%= f.text_field :scene,
                      class: "block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "利用シーンを入力" %>
                </div>
              </div>

              <div class="sm:col-span-3 mt-4">
                <%= f.label :opening_hours, class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="relative mt-2">
                  <%= f.text_field :opening_hours,
                      class: "block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "営業時間を入力" %>
                  <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none text-gray-400">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
          <div class="px-6 py-6 sm:p-8">
            <div class="grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-6">
              <div class="sm:col-span-3 mt-4">
                <%= f.label :shop_number, class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="relative mt-2">
                  <%= f.text_field :shop_number,
                      class: "block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "電話番号を入力" %>
                  <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none text-gray-400">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  </div>
                </div>
              </div>

              <div class="sm:col-span-3 mt-4">
                <%= f.label :shop_url, class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="relative mt-2">
                  <%= f.text_field :shop_url,
                      class: "block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "URLを入力" %>
                  <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none text-gray-400">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                    </svg>
                  </div>
                </div>
              </div>

              <div class="sm:col-span-3 mt-4">
                <%= f.label :latitude, class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="mt-2">
                  <%= f.text_field :latitude,
                      class: "block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "緯度を入力" %>
                </div>
              </div>

              <div class="sm:col-span-3 mt-4">
                <%= f.label :longitude, class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="mt-2">
                  <%= f.text_field :longitude,
                      class: "block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "経度を入力" %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
          <div class="px-6 py-6 sm:p-8 mt-4">
            <div class="text-base font-semibold leading-7 text-gray-900 mb-6">店舗画像</div>
            <div class="space-y-6">
              <% if @shop.shop_image.present? %>
                <div class="flex items-center space-x-6">
                  <div class="relative">
                    <%= image_tag(url_for(@shop.shop_image.variant(resize: '300x300')), class: "h-40 w-40 object-cover rounded-lg") %>
                    <div class="absolute inset-0 ring-1 ring-inset ring-black/10 rounded-lg"></div>
                    <%= button_to '画像を削除', { action: :destroy_image, id: @shop.id }, method: :delete, class: "ml-4 px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700" %>
                  </div>
                </div>
              <% end %>

              <div class="mt-4">
                <%= f.label :shop_image, class: "block text-sm font-medium leading-6 text-gray-900 mb-2" %>
                <div class="mt-2 flex justify-center rounded-lg border border-dashed border-gray-900/25 px-6 py-10">
                  <div class="text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor">
                      <path fill-rule="evenodd" d="M1.5 6a2.25 2.25 0 012.25-2.25h16.5A2.25 2.25 0 0122.5 6v12a2.25 2.25 0 01-2.25 2.25H3.75A2.25 2.25 0 011.5 18V6zM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0021 18v-1.94l-2.69-2.689a1.5 1.5 0 00-2.12 0l-.88.879.97.97a.75.75 0 11-1.06 1.06l-5.16-5.159a1.5 1.5 0 00-2.12 0L3 16.061zm10.125-7.81a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0z" clip-rule="evenodd" />
                    </svg>
                    <div class="mt-4 flex text-sm leading-6 text-gray-600">
                      <label for="file-upload" class="relative cursor-pointer rounded-md bg-white font-semibold text-indigo-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-indigo-600 focus-within:ring-offset-2 hover:text-indigo-500">
                        <%= f.file_field :shop_image,
                            class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-600 hover:file:bg-indigo-100",
                            accept: "image/*" %>
                      </label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="flex items-center justify-end space-x-4 pt-6">
          <%= link_to admin_shop_path(@shop),
              class: "rounded-md bg-white px-4 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 transition-colors duration-200" do %>
            <span class="flex items-center">
              <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              キャンセル
            </span>
          <% end %>

          <%= f.button type: "submit",
              class: "rounded-md bg-gray-800 px-8 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-gray-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600 transition-colors duration-200",
              data: { turbo_confirm: "この内容で保存してよろしいですか？" } do %>
            <span class="flex items-center">
              <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              保存する
            </span>
          <% end %>
        </div>

        <%= link_to "戻る", :back, class: "tracking-widest pt-6 flex flex-col w-full text-center text-sm text-black hover:underline" %>

      </div>
    <% end %>
  </div>
</div>