<%= content_for :head do %>
  <title>レビューを投稿</title>
<% end %>

<div class="flex justify-center items-center min-h-screen bg-cover bg-center" style="background-image: url('<%= asset_path('shisha.jpg') %>')">
  <div class="w-full max-w-md p-8 m-4 bg-white bg-opacity-10 backdrop-filter backdrop-blur-lg rounded-lg shadow-lg text-white border-2 border-white border-opacity-10">
    <%= form_with(model: [@shop, @review], local: true) do |f| %>
      <h1 class="text-4xl text-center mb-8">レビューを投稿</h1>
      <% if @review.errors.any? %>
        <div class="mb-4 p-4 bg-red-100 rounded-lg">
          <h3 class="text-red-700"><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h3>
          <ul class="list-disc list-inside">
            <% @review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-6">
        <%= f.label :title, 'タイトル', class: 'block text-white text-sm mb-2' %>
        <%= f.text_field :title, class: 'w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent' %>
      </div>

      <div class="mb-6">
        <%= f.label :content, 'レビュー内容', class: 'block text-white text-sm mb-2' %>
        <%= f.text_area :content, class: 'w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent h-32' %>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit '投稿する', class: 'w-full py-3 bg-white text-gray-800 rounded-md hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 cursor-pointer' %>
      </div>
    <% end %>
    <%= link_to "戻る", :back, class: "tracking-widest pt-6 flex flex-col w-full text-center text-white hover:underline" %>

  </div>
</div>