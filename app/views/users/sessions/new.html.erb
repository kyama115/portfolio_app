<%= content_for :head do %>
  <title>ログイン</title>
<% end %>

<div class="flex justify-center items-center min-h-screen bg-cover bg-center" style="background-image: url('<%= asset_path('shisha.jpg') %>')">
  <div class="w-full max-w-md p-8 m-4 bg-white bg-opacity-10 backdrop-filter backdrop-blur-lg rounded-lg shadow-lg text-white border-2 border-white border-opacity-10">
    <%= form_with(model: @user, url: new_user_session_path, local: true) do |f| %>
      <h1 class="text-4xl text-center mb-8">ログイン</h1>
      <div class="mb-6">
        <%= f.text_field :email, placeholder: "メールアドレス", required: true,  class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>
      <div class="mb-6">
        <%= f.password_field :password, placeholder: "パスワード", required: true, class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>
      <div class="flex justify-between items-center mb-6">
        <%= link_to "パスワードを忘れた方はこちら", new_user_password_path, class: "text-sm hover:underline text-right w-full text-right" %>
      </div>
      <%= f.submit "ログイン", class: "w-full py-3 bg-white text-gray-800 rounded-md hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 cursor-pointer" %>

      <div class="text-center mt-6">
        <p class="text-sm">登録はお済みですか？ <%= link_to "新規登録はこちら", new_user_registration_path, class: "hover:underline" %></p>
      </div>
    <% end %>
  </div>
</div>
