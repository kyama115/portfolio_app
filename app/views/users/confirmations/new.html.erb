<%= content_for :head do %>
  <title>確認メール再送信</title>
<% end %>

<div class="flex flex-col min-h-screen justify-center items-center bg-cover bg-center" style="background-image: url('<%= asset_path('shisha.jpg') %>')">
  <div class="w-full max-w-md p-8 m-4 bg-white bg-opacity-10 backdrop-filter backdrop-blur-lg rounded-lg shadow-lg text-white border-2 border-white border-opacity-10">
    <%= form_for(resource, as: resource_name, url: new_user_confirmation_path, html: { method: :post }) do |f| %>
      <h1 class="text-4xl text-center mb-8">確認メール再送信</h1>

      <%= render "users/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :email, class: "block text-sm font-medium text-white" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "w-full px-4 py-3 bg-transparent border border-white rounded focus:outline-none focus:border-blue-500" %>
      </div>

      <div class="actions">
        <%= f.submit "確認メール再送信", class: "w-full py-3 mt-6 font-medium tracking-widest text-white uppercase bg-blue-500 shadow-lg focus:outline-none hover:bg-blue-700 hover:shadow-none" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "users/shared/links" %>