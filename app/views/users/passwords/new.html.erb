<%= content_for :head do %>
  <title>パスワード再設定</title>
<% end %>

<div class="flex flex-col min-h-screen justify-center items-center bg-cover bg-center" style="background-image: url('<%= asset_path('shisha.jpg') %>')">
  <div class="w-full max-w-md p-8 m-4 bg-white bg-opacity-10 backdrop-filter backdrop-blur-lg rounded-lg shadow-lg text-white border-2 border-white border-opacity-10">
    <h2 class="text-4xl text-center mb-8">パスワードの再設定</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :email, "ご登録のメールアドレス", class: "block text-sm font-medium text-white" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>

      <%= f.submit "パスワード再設定用リンクを送信", class: "w-full py-3 bg-white text-gray-800 rounded-md hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 cursor-pointer" %>
    <% end %>

    <div class="text-center mt-6 flex justify-center space-x-4">
      <%= render "users/shared/links", class: "text-sm hover:underline" %>
    </div>
  </div>
</div>