<%= content_for :head do %>
  <title>アカウント編集</title>
<% end %>

<div class="flex flex-col min-h-screen justify-center items-center bg-cover bg-center" style="background-image: url('<%= asset_path('shisha.jpg') %>')">
  <div class="w-full max-w-md p-8 m-4 bg-white bg-opacity-10 backdrop-filter backdrop-blur-lg rounded-lg shadow-lg text-white border-2 border-white border-opacity-10">
    <h1 class="text-4xl tracking-widest text-center mb-8">アカウント編集</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
      <div class="flex flex-col items-center mb-8">
        <% if resource.avatar_persisted? %>
          <%= image_tag(url_for(resource.avatar), class: "rounded-full w-40 h-40 object-cover mb-4") %>
          <%= button_to "プロフィール画像を削除", delete_user_avatar_path, method: :delete, class: "px-6 py-3 text-sm mb-4 bg-black text-white rounded-full hover:underline" %>
        <% else %>
          <%= image_tag("default_avatar.png", class: "rounded-full w-40 h-40 object-cover mb-4") %>
        <% end %>
        <%= f.file_field :avatar, class: "text-sm mb-4" %>
      </div>

      <div class="mb-6">
        <%= f.label :name, "名前", class: "block text-white" %>
        <%= f.text_field :name, class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>

      <div class="mb-6">
        <%= f.label :nickname, "ニックネーム", class: "block text-white" %>
        <%= f.text_field :nickname, class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>

      <div class="mb-6">
        <%= f.label :email, "メールアドレス", class: "block text-white" %>
        <%= f.email_field :email, autocomplete: "email", class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-6">現在、次のメールアドレスの確認を待っています: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-6">
        <%= f.label :password, "新しいパスワード (変更しない場合は空白)", class: "block text-white" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
        <% if @minimum_password_length %>
          <em>※ <%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, "新しいパスワード (確認)", class: "block text-white" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>

      <div class="mb-6">
        <%= f.label :current_password, "現在のパスワード (変更を確認するために必要)", class: "block text-white" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>

      <div class="actions mb-6">
        <%= f.button type: 'submit', class: "w-full tracking-widest py-3 bg-white text-gray-800 rounded-md hover:bg-gray-100 hover:underline focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 cursor-pointer flex items-center justify-center" do %>
          <i class="fa-solid fa-pen mr-2"></i>更新
        <% end %>
      </div>
    <% end %>

    <div class="text-center">
      <%= button_to user_registration_path, method: :delete, data: { turbo_confirm: "本当にアカウントを削除しますか？" }, class: "w-full tracking-widest py-3 bg-red-600 text-white rounded-md hover:bg-red-700 hover:underline focus:outline-none focus:ring-2 focus:ring-red-700 focus:ring-opacity-50 cursor-pointer transition duration-300 ease-in-out flex items-center justify-center" do %>
        <i class="fas fa-user-times mr-2"></i> アカウント削除
      <% end %>
    </div>

    <%= link_to "戻る", :back, class: "tracking-widest mt-6 flex flex-col w-full text-center text-white hover:underline" %>
  </div>
</div>