<%= content_for :head do %>
  <title>アカウント編集</title>
<% end %>

<div class="flex flex-col min-h-screen justify-center items-center bg-cover bg-center" style="background-image: url('<%= asset_path('shisha.jpg') %>')">
  <div class="w-full max-w-md p-8 m-4 bg-white bg-opacity-10 backdrop-filter backdrop-blur-lg rounded-lg shadow-lg text-white border-2 border-white border-opacity-10">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <h1 class="text-4xl text-center mb-8">アカウント編集</h1>

      <div class="mb-6">
        <%= f.label :email, class: "block text-white" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-6">現在、次のメールアドレスの確認を待っています: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-6">
        <%= f.label :password, "パスワード (変更しない場合は空白のままにしてください)", class: "block text-white" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> 文字以上必要です</em>
        <% end %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-white" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>

      <div class="mb-6">
        <%= f.label :current_password, "現在のパスワード (変更を確認するために必要です)", class: "block text-white" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>

      <div class="actions mb-6">
        <%= f.submit "更新", class: "w-full py-3 bg-white text-gray-800 rounded-md hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 cursor-pointer" %>
      </div>
    <% end %>

    <h3 class="text-white text-center mt-8">アカウントをキャンセル</h3>
    <div class="text-center">
      <%= button_to "アカウントをキャンセル", registration_path(resource_name), data: { confirm: "本当によろしいですか？", turbo_confirm: "本当によろしいですか？" }, method: :delete, class: "py-2 px-4 bg-red-600 hover:bg-red-700 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 cursor-pointer" %>
    </div>

    <%= link_to "戻る", :back, class: "text-white hover:underline" %>
  </div>
</div>