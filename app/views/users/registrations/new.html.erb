<%= content_for :head do %>
  <title>新規登録</title>
<% end %>

<div class="flex flex-col min-h-screen justify-center items-center bg-cover bg-center" style="background-image: url('<%= asset_path('shisha.jpg') %>')">
  <div class="w-full max-w-md p-8 m-4 bg-white bg-opacity-10 backdrop-filter backdrop-blur-lg rounded-lg shadow-lg text-white border-2 border-white border-opacity-10">
    <%= form_with(model: @user, url: user_registration_path, local: true) do |f| %>
      <h1 class="text-4xl text-center mb-8">新規登録</h1>

      <div class="mb-6">
        <%= f.text_field :name, placeholder: "ユーザー名", required: true, class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>

      <div class="mb-6">
        <%= f.email_field :email, placeholder: "メールアドレス", required: true, class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>

      <div class="mb-6">
        <%= f.password_field :password, placeholder: "パスワード（6文字以上）", required: true, class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>

      <div class="mb-6">
        <%= f.password_field :password_confirmation, placeholder: "パスワード確認", required: true, class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>

      <div class="mb-6">
        <%= f.text_field :nickname, placeholder: "ニックネーム（任意）", class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent placeholder-white" %>
      </div>

      <div class="mb-6">
        <%= f.file_field :avatar, class: "w-full px-4 py-3 bg-transparent border-2 border-white border-opacity-20 rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent text-white" %>
        <p class="mt-1 text-sm">アバター画像（任意）</p>
      </div>

      <%= f.submit "新規登録", class: "w-full py-3 bg-white text-gray-800 rounded-md hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 cursor-pointer" %>

      <div class="text-center mt-6">
        <p class="text-sm">アカウントをお持ちですか？ <%= link_to "ログインはこちら", new_user_session_path, class: "hover:underline" %></p>
      </div>
    <% end %>
  </div>
  <div class="mb-18"></div>
</div>
